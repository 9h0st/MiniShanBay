<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minishanbay.ghost.minishanbay" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/books_school_64"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainListActivity"
            android:label="@string/listactivity_bar"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/lesson_title"/>
        <activity android:name=".activity.WordListActivity"
            android:theme="@style/AppTheme"
            android:label="@string/lesson_title"/>
    </application>

</manifest>
